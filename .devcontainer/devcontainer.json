{
  "name": "python-template",
  "build": {
    "context": "..",
    "dockerfile": "Dockerfile",
  },
  "extensions": [
    "ms-python.python",
    "mhutchie.git-graph",
    "editorconfig.editorconfig"
  ],
  "settings": {
    "git-graph.showStatusBarItem": false,
    "python.formatting.provider": "black",
    "python.formatting.blackPath": "/usr/local/bin/black"
  }
}
