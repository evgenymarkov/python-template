{
  "name": "python-template",
  "build": {
    "context": "..",
    "dockerfile": "Dockerfile",
  },
  "extensions": [
    "ms-python.python",
    "mhutchie.git-graph",
    "editorconfig.editorconfig"
  ],
  "settings": {
    "python.formatting.provider": "black",
    "python.formatting.blackPath": "/usr/local/bin/black"
  },
  "forwardPorts": [
    8000
  ]
}
